<% provide(:title, 'Crea tu proyecto') %>

<div class="container">

  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <h1>Actualiza tu proyecto</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <%= form_for @user, url: project_path do |f| %>
        <%= f.fields_for :project, @user.project do |j| %>

        <%= render "errors" %>

        <div>
            <%= j.label :name, "Nombre del proyecto" %>
            <%= j.text_field :name, class: "form-control" %>
        </div>

        <div>
            <%= f.label :email, "Correo" %>
            <%= f.email_field :email, class: "form-control" %>
        </div>

        <div>
            <%= f.label :password, "Contraseña" %>
            <%= f.password_field :password, class: "form-control" %>
        </div>

        <div>
            <%= f.label :password_confirmation, "Confirmación" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <% if session[:message] = "admin" %>
        <div>
          <%= j.label :field, "Field del proyecto"%>
          <%= j.text_field :field, class: "form-control" %>
        </div>

        <div>
          <%= j.label :client, "Cliente del proyecto" %>
          <%= j.text_field :client, class: "form-control"%>
        </div>

        <div>
          <%= j.label :abstract, "Abstract del proyecto"%>
          <%= j.text_field :abstract, class: "form-control" %>
        </div>

        <div>
          <%= j.label :video_url, "URL del video" %>
          <%= j.text_field :video_url, class: "form-control"%>
        </div>

        <div>
          <%= j.label :status, "Status del proyecto" %>
          <%= j.text_field :status, class:"form-control" %>
        </div>
        <% end %>

        <div class="mt-3">
            <%= f.submit "Editar proyecto", class: "btn btn-primary" %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

