<% provide(:title, 'Crea tu proyecto') %>

<div class="container">

  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <h1>Actualiza tu proyecto</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <%= form_for(@project, url: edit_project_path) do |f| %>

        <%= render "errors" %>

        <div>
            <%= f.label :name, "Nombre del proyecto" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>

        <div>
            <%= f.label :email, "Correo" %>
            <%= f.email_field :email, class: "form-control" %>
        </div>

        <div>
            <%= f.label :password, "Contraseña" %>
            <%= f.password_field :password, class: "form-control" %>
        </div>

        <div>
            <%= f.label :password_confirmation, "Confirmación" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="mt-3">
            <%= f.submit "Crear cuenta de proyecto", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

