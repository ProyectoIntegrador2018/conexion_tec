<% provide(:title, 'Editar perfil') %>

<div class='container'>
  <div class='row'>
    <div class='col-12 col-md-6 col-centered'>
      <h1>Actualiza tus datos</h1>
    </div>
  </div>

  <%= form_for @student, url: @url do |f|  %>
    <div class='row'>
      <div class='col'>
        <%= f.label :major_id, 'Carrera' %>
        <%= f.select :major_id, Major.pluck(:name, :id), {}, class: 'form-control' %>
      </div>
    </div>

    <br>

    <div class='row'>
      <div class='col-md-6'>
        <%= link_to 'Cancelar', student_profile_path, class: 'btn btn-light btn-block' %>
      </div>
      <div class='col-md-6'>
        <%= f.submit 'Guardar', class: 'btn btn-primary btn-block', data: { confirm: '¿Estás seguro que deseas guardar los cambios?' } %>
      </div>
    </div>
  <% end %>
</div>
