<div class="container login_page">
	<h1>Inicia Sesión - Juez</h1>
	<%= form_tag login_judge_path, method: :post do %>
		<div class="form-group">
			<%= label_tag :email, "Correo" %>
			<%= email_field_tag :email, nil, class: 'form-control', required: true %>
		</div>

		<div class="form-group">
			<%= label_tag :password, "Contraseña" %>
			<%= password_field_tag :password, nil, class: 'form-control', required: true %>
		</div>

		<div class="form-group text-right">
			<%= submit_tag "Inicia sesión", class: 'btn btn-primary' %>
		</div>
	<% end %>
</div>
<%= render 'layouts/judge/footer' %>