<p id="notice"><%= notice %></p>
<p>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Text</th>
				<th>Category</th>
			</tr>
		</thead>

		<tbody>
			<% @questions.each do |question| %>
			<tr>
				<td><%= question.title %></td>
				<td><%= question.text %></td>
				<td><%= question.category.name %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= button_to "Agregar pregunta", admin_questions_new_path, class: "btn btn-primary btn-block text-white", method: :get%> 
</p>