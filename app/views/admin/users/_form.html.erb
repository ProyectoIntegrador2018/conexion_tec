<%= form_for @user, url: @url do |f|  %>
    <div class="row">
        <div class="col-md-4">
            <%= f.label :nombre %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="col-md-4">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-md-4">
            <%= f.label :tipo_de_usuario %>
            <%= f.select(:userable_type, [['Comité', 'Committee'], ['Operativo', 'Operative']], {}, { class: 'form-control'}) %>
        </div>
    </div><br />

     <div class="row">
        <div class="col-md-6">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="col-md-6">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
    </div><br />

    <div class="row">
        <div class="col">
            <%= link_to "Cancelar", admin_users_path, { class: "btn btn-default" } %>
            <%= f.submit "Guardar", class: "btn btn-primary", data: { confirm: '¿Estás seguro que deseas guardar los cambios?' } %>
        </div>
    </div>
<% end %>