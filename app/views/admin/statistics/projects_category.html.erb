<h1>Estadistícas de las categorias de los proyectos</h1>

<%= pie_chart Project.joins(:category).group('categories.name').count %>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Nombre del proyecto</th>
			<th scope="col">Categoría del proyecto</th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do |project| %>
			<tr scope="row">
				<td><%= project.name %></td>
				<td><%= project.category.name %></td>
			</tr>
		<% end %>
	</tbody>
</table>