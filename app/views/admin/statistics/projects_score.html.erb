<h1>Estadistícas de las calificaciones de los proyectos</h1>

<%= column_chart Project.group(:score).count %>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Nombre del proyecto</th>
			<th scope="col">Calificación del proyecto</th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do |project| %>
		<tr scope="row">
			<td><%= project.name %></td>
			<td><%= project.score %></td>
		</tr>
		<% end %>
	</tbody>
</table>