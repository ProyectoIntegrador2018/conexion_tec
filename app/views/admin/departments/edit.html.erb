<div class="container">
	<div class="row">
		<div class="col-12 col-md-6 offset-md-3">
			<h1>Actualiza departmento</h1>
		</div>
	</div>

	<%= form_for @department, url: admin_department_path do |f|  %>
		<div class="row">
			<div class="col">
				<%= f.label :Departamento %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
		</div><br />

		<div class="row">
			<div class="col">
				<%= f.submit "Guardar", class: "btn btn-primary", data: { confirm: '¿Estás seguro que deseas guardar los cambios?' } %>
			</div>
		</div>
	<% end %>
</div>
