<p id="notice"><%= notice %></p>

<% provide(:title, "Evaluaciones") %>

<h1>Evaluations</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Result</th>
      <th>Proyecto</th>
      <th>Juez</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>   
      <tr>
        <td><%= evaluation.id %></td>
        <td><%= evaluation.result%></td>
        <td><%= evaluation.assignment.project.name %></td>
        <td><%= evaluation.assignment.judge.user.name %></td>
        <td><%= link_to 'Delete', admin_evaluation_path(evaluation.id), method: :delete, data: {confirm: "Seguro que deseas borrar el Evaluacion #{evaluation.id}?"}  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>