<p id="notice"><%= notice %></p>

<h1>Proyectos</h1>

<table class="table table-responsibe">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Área</th>
      <th scope="col">Tipo</th>
      <th scope="col">Categoría</th>
      <th scope="col">Cliente</th>
      <th scope="col">Abstract</th>
      <th scope="col">Video URL</th>
      <th scope="col">Estatus</th>
      <th scope="col">Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr scope="row">
        <td><%= project.name %></td>
        <td><%= project.field %></td>
        <td><%= project.category.name %></td>
        <td><%= project.expertise_area.area %></td>
        <td><%= project.client %></td>
        <td><%= project.abstract %></td>
        <td><%= project.video_url %></td>
        <td><%= project.status %></td>
        <td>
          <% if !project.event_date.event %>
            <p> Sin fecha asignada </p>
          <% else %>
            <%= project.event_date.event %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>