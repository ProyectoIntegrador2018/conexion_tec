<%= form_for @project, url: @url do |f|  %>
    <div class="row">
		<div class="col">
			<div class="form-group">
				<%= f.label :name, 'Nombre' %>
                <%= f.text_field :name, class: "form-control" %>
			</div>
		</div>
	</div>
    <div class="row">
		<div class="col">
			<div class="form-group">
				<%= f.label :abstract, 'Abstract' %>
                <%= f.text_area :abstract, class: "form-control" %>
			</div>
		</div>
	</div>
    <div class="row">
		<div class="col">
			<div class="form-group">
				<%= f.label :description, 'Descripción' %>
                <%= f.text_area :description, class: "form-control" %>
			</div>
		</div>
	</div>
    <div class="row">
		<div class="col">
			<div class="form-group">
				<%= f.label :category_id, 'Categoría' %><br>
                <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name) %>
			</div>
		</div>
        <div class="col-md-4">
            <%= f.label :expertise_area_id, 'Tipo de proyecto' %>
            <%= f.select :expertise_area_id, options_from_collection_for_select(ExpertiseArea.all, :id, :area) %>
        </div>
        <div class="col-md-4">
            <%= f.label :client_id, 'Tipo de cliente' %>
            <%= f.select :client_id, options_from_collection_for_select(Client.all, :id, :client) %>
        </div>
	</div>
    <div class="row">
        <div class="col-md-4">
            <%= f.label :field_id, 'Área temática' %>
            <%= f.select :field_id, options_from_collection_for_select(Field.all, :id, :name) %>
        </div>
	</div><br />
	 <div class="row">
        <div class="col-md-6">
            <%= f.label :student_id, 'Correo del estudiante responsable' %>
            <%= f.email_field :student_id, class: "form-control" %>
        </div>
		<div class="col-md-6">
            <%= f.label :professor_id, 'Correo del profesor responsable' %>
            <%= f.email_field :professor_id, class: "form-control" %>
        </div>
	</div>
    <div class="mt-3">
          <%= f.submit "Crear proyecto", class: "btn btn-primary"%>
      </div>
<% end %>


