<div class="form-group">
	<div class="row">
		<div class="column">
			<h3><%= question.title%></h3>
			<h4><%= question.text%></h4>
			<div class="row">
				<%= collection_radio_buttons(:scores, question.id, (0..5).map{|n| [n, n]}, :first, :last, {}, {required: true}) do |b| %>
				<div class="col-2">
					<div>
						<%= b.radio_button %>
					</div>
					<div>
						<%= b.label %>
					</div>
				</div>
				<% end %>
			</div>
			<br>
		</div>
	</div>
</div>