<nav id='Landing-Nav' class="navbar navbar-expand-md navbar-dark">
  <a class="navbar-brand" href="<%= root_path %>">
    <img id="navLogo" alt="logo" src="conexionTexLogo.png" width="40" height="40">
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_navbar" aria-controls="main_navbar" aria-expanded="false" aria-label="Toggle navigation">
    MENU
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="main_navbar">
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <%= button_to "Login Estudiante", login_student_path, class: "btn btn-primary btn-block text-white", method: :get %>
      </li>
      <li class="nav-item">
        <%= button_to "Login administrador", login_admin_path, class: "btn btn-danger btn-block text-white", method: :get %>
      </li>
      <li class="nav-item">
        <%= button_to "Login Juez", login_judge_path, class: "btn btn-success btn-block text-white", method: :get %>
      </li>
      <li class="nav-item">
        <%= button_to "Login Profesor", login_professor_path, class: "btn btn-secondary btn-block text-white", method: :get %>
      </li>
    </ul>
  </div>
  <script>
    $(window).scroll(function () {
      var scroll_pos= $(window).scrollTop();
      if(scroll_pos > 0) {
        $(".navbar").css('background-color', 'white');
        $(".navbar-toggler").css('color', '#2980b9');
        $(".navbar-toggler").css('border-color', '#2980b9');
      } else {
        $(".navbar").css('background-color', "rgba(255, 255, 255, 0)");
        $(".navbar-toggler").css('color', 'white');
        $(".navbar-toggler").css('border-color', 'white');
      }
    });
  </script>
</nav>
