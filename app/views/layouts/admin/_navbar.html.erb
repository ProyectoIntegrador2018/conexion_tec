<div class="d-flex" id="wrapper">

  <!-- Sidebar -->
  <div class="border-right" id="sidebar-wrapper">
    <div class="sidebar-heading bg-primary text-white">
      <h2>Admin</h2>
    </div>
    <div class="list-group list-group-flush">
      <%= link_to "Proyectos", admin_projects_path, class: "nav-link" %>
      <%= link_to "Jueces", admin_judges_path, class: "nav-link" %>
      <%= link_to "Evaluaciones", admin_evaluations_path, class: "nav-link" %>
      <%= link_to "Preguntas", admin_questions_path, class:"nav-link"%>
      <%= link_to "Ediciones", admin_editions_path, class:"nav-link" %>
      <%= link_to "Usuarios", admin_users_path, class:"nav-link" %>
      <%= link_to "Asignar juez", admin_assignments_path, class: "nav-link" %>
      <div class="dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Estadísticas
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="<%= admin_statistics_projects_score_path%>">Calificaciones de los proyectos</a>
          <a class="dropdown-item" href="<%= admin_statistics_projects_score_category_path%>">Calificaciones por
            categoría</a>
        </div>
      </div>
      <div class="dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">Catálogos</a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="<%= admin_expertise_areas_path%>">Áreas de Expertise</a>
          <a class="dropdown-item" href="<%= admin_clients_path %>">Clientes</a>
          <a class="dropdown-item" href="<%= admin_fields_path %>">Áreas Temáticas</a>
          <a class="dropdown-item" href="<%= admin_departments_path %>">Departamentos</a>
          <a class="dropdown-item" href="<%= admin_majors_path %>">Carreras</a>
          <a class="dropdown-item" href="<%= admin_categories_path %>">Categorías</a>
        </div>
      </div>
    </div>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
      <button class="btn btn-primary" id="menu-toggle"><span class="navbar-toggler-icon"></span></button>
      <div class="dropdown ml-auto mt-2 mt-lg-0 dropleft">
        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          Mi Cuenta
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to "Mi Perfil", '#', class: 'dropdown-item' %>
          <div class="dropdown-divider"></div>
          <%= link_to "Cerrar Sesión", logout_admin_path, method: :post, class: 'dropdown-item' %>
        </div>
        </li>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="container mx-auto">
        <div class="row mt-3">
          <div class="col">
            <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>">
              <%= message %>
              <button class="close" data-dismiss="alert">×</button>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="container bottom-padding">
        <%= yield %>
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
<script>
  $("#menu-toggle").click(function (e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>
