<% if flash[:success].present? %>
	<div class="alert alert-sucess" role="alert">
	  <p><%= flash[:success] %></p>
	</div>
<% end %>

<% if flash[:warning].present? %>
	<div class="alert alert-warning" role="alert">
	  <p><%= flash[:warning] %></p>
	</div>
<% end %>

<% if flash[:error].present? %>
	<div class="alert alert-danger" role="alert">
	  <p><%= flash[:error] %></p>
	</div>
<% end %>