<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h3 data-toggle="tooltip" data-placement="top">
				<%= project.name %>
			</h3>
			<div class="row">
				<div class="col-md-4">
					<small> <strong>ID: </strong> <%= project.id %> </small>
				</div>
				<div class="col-md-4">
					<small> <strong>Día: </strong> <%= rand(1..2) %> </small>
				</div>
				<div class="col-md-4">

					<small> <strong>Stand: </strong> <%= project.stand.nil? ?  "Pendiente de asignar" : project.stand.number %> </small>

				</div>
			</div>

			<div class="row">
				<div class="col-md-4">
					<strong>Profesor: </strong> <%= project.professor.user.name %><br>
				</div>
				<div class="col-md-4">
					<strong>Alumno responsable: </strong> <%= project.student.user.name %><br>
				</div>
			</div><br>

		</div>
	</div><br>

	<div class="row">
		<% if project.attended != 2 %>
		<div class="col-md-3">
			<% if project.attended == 1 %>
			<%= link_to common_project_mark_assistance_path(project), method: :mark_assistance, data: { confirm: 'Se quitara la asistencia al proyecto ¿Estás seguro que deseas realizar esta acción?'} do %>
			<span><i class="fa fa-user-times" style="color: orange"></i></i> Retirar asistencia</span>
			<% end %>
			<% elsif project.attended == 0 %>
			<%= link_to common_project_mark_assistance_path(project), method: :mark_assistance, data: { confirm: '¿Estás seguro que deseas confirmar la asistencia de este proyecto?'} do %>
			<span><i class="fa fa-user-plus" style="color: green"></i></i> Marcar asistencia</span>
			<% end %>
			<% end %>
		</div>
		<% end %>

		<div class="col-md-3">
			<% if project.attended == 1 %>
			<%= link_to common_project_block_path(project), method: :block, data: { confirm: 'Se bloqueará la asignación de evaluaciones al proyecto ¿estás seguro que deseas realizar esta acción?'} do %>
			<span><i class="fa fa-lock" style="color: red"></i></i> Bloquear proyecto</span>
			<% end %>
			<% elsif project.attended == 2 %>
			<%= link_to common_project_block_path(project), method: :block, data: { confirm: '¿Estás seguro que deseas desbloquear este proyecto?'} do %>
			<span><i class="fa fa-unlock-alt" style="color: green"></i></i> Desloquear proyecto</span>
			<% end %>
			<% end %>
		</div>
	</div>
</div>
<hr>
