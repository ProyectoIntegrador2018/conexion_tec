<tr scope="row">
  <td><%= project.name %></td>
  <td>
    <%= project.field.name %><br />
    <small><%= "Tipo de proyecto: #{project.expertise_area.area}" %></small><br />
    <small><%= "CategorÃ­a: #{project.category.name}" %></small>
  </td>
  <td><%= project.evaluations %></td>
  <td><%= project.assignments.count %></td>
  <td>
    <button id="project" type="button" class="open-modal btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-id="<%= project.id %>">
      Asignar
    </button>
  </td>
</tr>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Asignar juez</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for Assignment.new, url: common_create_assignment_path do |f|  %>
          <div class="form-group">
            <%= f.label :juez, 'Juez' %><br>
              <%= f.select :judge_id, options_from_collection_for_select(Judge.all, :id, :name) %>
          </div><br />
          <input type="hidden" name="assignment[project_id]" id="project-id">
          <%= f.submit "Asignar", class: "btn btn-primary"%>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>