<% provide(:title, 'Preguntas') %>

<div class="row">
  <div class="col-md-4">
    <h1>Preguntas</h1>
</div>

<div class="col-md-6"></div>

<div class="float-right">
    <%= link_to "Agregar pregunta", common_questions_new_path, class: "btn btn-primary btn-block text-white"%>
</div>
</div><br />

<% if @questions.length > 0 %>
<div class="container-fluid">
	<table class="table table-responsive">
    <thead>
      <tr>
        <th scope="col">Pregunta</th>
        <th scope="col">Descripción</th>
        <th scope="col">Categoría</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    	<%= render @questions %>
    </tbody>
  </table>
  <br /> <br />
</div>
<% else %>
<div class="row">
	<div class="col-md-12">
		<div class="card border-dark mb-3">
        	<div class="card-header">Aviso</div>
        	<div class="card-body text-dark">
          		<h5 class="card-title">No tienes preguntas registradas</h5>
          		<p class="card-text">Por el momento no cuentas con preguntas dadas de alta, favor de dar click en "Agregar pregunta" para añadir nuevas preguntas.</p>
        	</div>
      	</div>
    </div>
 </div>
<% end %>
