<%= form_for @expertise_area, url: @url do |f|  %>
  <div class='row'>
    <div class='col-md-12'>
      <%= f.label :area, 'Área' %>
      <%= f.text_field :area, class: 'form-control' %>
    </div>
  </div>

  <br>

  <div class='row'>
    <div class='col-md-6'>
      <%= link_to 'Cancelar', common_expertise_areas_path, class: 'btn btn-light btn-block' %>
    </div>
    <div class='col-md-6'>
      <%= f.submit 'Guardar', class: 'btn btn-primary btn-block', data: { confirm: '¿Estás seguro que deseas guardar los cambios?' } %>
    </div>
  </div>
<% end %>
