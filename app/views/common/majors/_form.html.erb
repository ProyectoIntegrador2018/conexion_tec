<%= form_for @major, url: @url do |f|  %>
    <div class="row">
        <div class="col-md-12">
            <%= f.label :Carrera %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div><br />

    <div class="row">
        <div class="col-md-6">
            <%= link_to "Cancelar", common_majors_path, { class: "btn btn-default", style: "width: 100%; border-color: #DCDCDC;" } %>
        </div>
        <div class="col-md-6">
            <%= f.submit "Guardar", class: "btn btn-primary", style: "width: 100%;", data: { confirm: '¿Estás seguro que deseas guardar los cambios?' } %>
        </div>
    </div>
<% end %>