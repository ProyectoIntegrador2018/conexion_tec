<%= form_for @user, url: @url do |f|  %>
  <div class='row'>
    <div class='col-md-6'>
      <%= f.label :name, 'Nombre' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='col-md-6'>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <br>

  <div class='row'>
    <div class='col-md-6'>
      <%= link_to 'Cancelar', common_operatives_path, class: 'btn btn-default btn-block' %>
    </div>
    <div class='col-md-6'>
      <%= f.submit 'Guardar', class: 'btn btn-primary btn-block', data: { confirm: '¿Estás seguro que deseas guardar los cambios?' } %>
    </div>
  </div>
<% end %>
