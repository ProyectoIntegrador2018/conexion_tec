<tr>
  <td class='table-cell'>
    <%= edition.number %>
  </td>
  <td class='table-cell'>
    <%= edition.registry_open.strftime('%d/%m/%Y') if edition.registry_open.present? %>
    -
    <%= edition.registry_limit.strftime('%d/%m/%Y') if edition.registry_limit.present? %>
  </td>
  <td class='table-cell'>
    <%= edition.video_open.strftime('%d/%m/%Y') if edition.video_open.present? %>
    -
    <%= edition.video_limit.strftime('%d/%m/%Y') if edition.video_limit.present? %>
  </td>
  <td class='table-cell'>
    <div class='dropdown'>
      <button class='btn btn-info dropdown-toggle' type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
        Acciones
      </button>
      <div class='dropdown-menu'>
        <%= link_to 'Editar', edit_common_edition_path(edition), class: 'dropdown-item' %>
        <%= link_to 'Eliminar', common_edition_path(edition), class: 'dropdown-item', method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar esta edición?'} %>
      </div>
    </div>
  </td>
</tr>